<script>
    document.addEventListener("DOMContentLoaded", function () {
        const heroLottie = document.getElementById("heroLottie");

        if (!heroLottie) {
            console.error("Lottie player element not found!");
            return;
        }

        const lottieFiles = [
            "/images/hero/hero-1.json",
            "/images/hero/hero-2.json",
            "/images/hero/hero-3.json",
        ];

        const randomFile = lottieFiles[Math.floor(Math.random() * lottieFiles.length)];

        customElements.whenDefined("lottie-player").then(() => {
            // Force Lottie Player to load the animation properly
            heroLottie.load(randomFile);
            console.log("Random Lottie Loaded:", randomFile);
        });
    });
</script>




