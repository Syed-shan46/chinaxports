<div class="container" data-aos="fade-up" data-aos-delay="100">
  <div class="row g-4">
    {{#each handpickedProducts}}
    <div class="col-6 col-xl-4">
      <a href="/products/product-details/{{this._id}}" class="text-decoration-none text-reset">
        <div class="product-card" data-aos="zoom-in" style="cursor: pointer;">
          <div class="product-image">
            <img src="{{this.imageUrl.[0]}}" class="main-image img-fluid" alt="{{this.productName}}">
          </div>
          <div class="product-details" style="padding: 0px;">
            <div class="product-category">{{this.category.name}}</div>
            <h4 class="product-title" style="margin-bottom: 0px;">{{this.productName}}</h4>
            <div class="product-meta">
              <div class="product-price">${{this.price}}</div>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>


<style>
  /* Product Card */
  .product-card {
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  /* Product Image */
  .product-image {
    position: relative;
    padding-top: 100%;
    /* Square ratio */
    overflow: hidden;
    background: #f9f9f9;
  }

  .product-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  /* Product Details */
  .product-details {
    padding: 12px 14px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .product-category {
    font-size: 13px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .product-title {
    font-size: 15px;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    /* max 2 lines */
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 42px;
    /* keeps height consistent */
  }

  .product-meta {
    margin-top: auto;
    font-size: 16px;
    font-weight: bold;
    color: #e63946;
  }
</style>