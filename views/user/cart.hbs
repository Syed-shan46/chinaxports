<div class="container my-5">

    <div class="mt-5 pt-5"></div>

    {{!-- Offer Banner --}}
    <div class="alert alert-success text-center py-3 mb-4 shadow-sm rounded pt-5">
        <h5 class="mb-0">
            ðŸŽ‰ Special Offer: Get exclusive discounts on orders above <strong>â‚¹50,000</strong>!
        </h5>
        <small>Offer automatically applied during WhatsApp checkout.</small>
    </div>

    <div class="row">

        {{!-- Cart Items --}}
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Your Cart ({{cart.length}} Items)</h5>
                </div>

                <div class="card-body">

                    {{#if cart.length}}
                    {{#each cart}}
                    <div class="d-flex align-items-center justify-content-between border-bottom pb-3 mb-3">

                        <div class="d-flex align-items-center">
                            <img src="{{this.image}}" alt="{{this.name}}" class="rounded"
                                style="width:70px;height:70px;object-fit:cover;">

                            <div class="ms-3">
                                <h6 class="mb-1">{{this.name}}</h6>
                                <p class="text-muted small mb-1">Price: â‚¹{{this.price}}</p>

                                {{!-- Quantity Controls --}}
                                <div class="d-flex align-items-center mt-2">

                                    <form action="/cart/decrease/{{this.id}}" method="POST">
                                        <button class="btn btn-sm btn-outline-secondary px-3">âˆ’</button>
                                    </form>

                                    <span class="mx-3 fw-semibold">{{this.quantity}}</span>

                                    <form action="/cart/increase/{{this.id}}" method="POST">
                                        <button class="btn btn-sm btn-outline-secondary px-3">+</button>
                                    </form>

                                </div>

                            </div>
                        </div>

                        <div class="text-end">
                            <h6 class="text-dark mb-2">â‚¹{{this.total}}</h6>

                            <form action="/cart/remove/{{this.id}}" method="POST">
                                <button class="btn btn-sm btn-outline-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <p class="text-center text-muted">Your cart is empty.</p>
                    {{/if}}

                </div>
            </div>
        </div>


        {{!-- Order Summary --}}
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0 text-white">Order Summary</h5>
                </div>

                <div class="card-body">

                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <strong>â‚¹{{subtotal}}</strong>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Offer Applied</span>
                        <strong class="text-success">â‚¹{{offerDiscount}}</strong>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-3">
                        <h5>Total</h5>
                        <h5>â‚¹{{grandTotal}}</h5>
                    </div>

                    {{!-- WhatsApp Checkout --}}
                    <a target="_blank" href="https://wa.me/{{whatsappNumber}}?text={{encodedCartDetails}}"
                        class="btn btn-success w-100 py-2 mb-3">
                        <i class="bi bi-whatsapp me-2"></i> Proceed via WhatsApp
                    </a>

                    <p class="small text-muted text-center">
                        ðŸ“© After sending your cart details on WhatsApp, our team will reply immediately to confirm your
                        order, provide payment options, and arrange delivery.
                    </p>

                </div>
            </div>
        </div>

    </div>
</div>